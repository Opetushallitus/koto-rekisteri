{
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchPackageNames": ["awscli"],
      "extractVersion": "^ref:(?<version>.*)$",
      "currentValueTemplate": "ref:{{{newVersion}}}"
    }
  ]
}
